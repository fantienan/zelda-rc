{
  "compilerOptions": {
    "outDir": "es",
    // 指定模块生成方式，["commonjs", "amd", "umd", "system", "es6", "es2015", "esnext", "none"]
    "module": "esnext",
    // 输出代码 ES 版本，可以是 ["es3", "es5", "es2015", "es2016", "es2017", "esnext"]
    "target": "es5",
    // 生成 .d.ts 定义文件
    "declaration": true,
    "jsx": "react",
    "moduleResolution": "node",
    // 允许引入没有默认导出的模块
    "allowSyntheticDefaultImports": true
  },
  "include": [
    "src/components"
  ],
  "exclude": [
    "src/**/*.test.tsx",
    "src/**/*.stories.tsx",
    "src/setupTests.ts",
  ]
}
